---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to Astro.">
  <main>
    <div class="container">
      <h1>Extract Text from Image</h1>
      <div class="upload-section">
        <input type="file" id="imageUploader" accept="image/*" />
        <p id="status">Upload an image to extract text.</p>
      </div>
      <div class="output-section">
        <h2>Extracted Text:</h2>
        <div id="extractedText" class="text-output"></div>
      </div>
    </div>
  </main>
</Layout>
<script src="@scripts/ocr.js"></script>
<style is:global>
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  body {
    font-family: "Arial", sans-serif;
    background: linear-gradient(135deg, #ece9e6, #ffffff);
    color: #333;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    padding: 20px;
  }

  .container {
    background: #fff;
    border-radius: 10px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    padding: 20px;
    max-width: 600px;
    width: 100%;
    text-align: center;
  }

  h1 {
    font-size: 24px;
    color: #4a90e2;
    margin-bottom: 20px;
  }

  .upload-section {
    margin-bottom: 20px;
  }

  input[type="file"] {
    font-size: 16px;
    padding: 10px;
    border: 2px solid #4a90e2;
    border-radius: 5px;
    cursor: pointer;
    transition: border-color 0.3s ease;
  }

  input[type="file"]:hover {
    border-color: #357abd;
  }

  #status {
    margin-top: 10px;
    color: #999;
    font-size: 14px;
  }

  .output-section {
    margin-top: 30px;
  }

  h2 {
    font-size: 20px;
    color: #333;
    margin-bottom: 10px;
  }

  .text-output {
    background: #f7f7f7;
    border-radius: 5px;
    padding: 15px;
    font-size: 16px;
    color: #555;
    border: 1px solid #ddd;
    min-height: 150px;
    overflow-y: auto;
  }

  .text-output::-webkit-scrollbar {
    width: 8px;
  }
</style>
